{% extends 'base.html.twig' %}

{% block title %}Conversion historical{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <p class="navbar-brand" href="#"></p>
    <div class="d-flex">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="{{ path('converter') }}">Converter</a>
        </li>
        <li class="nav-item me-auto">
          <a class="nav-link" href="{{ path('historical') }}"> Conversions Historical</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

{% if conversions|length > 0 %}
<div class="container mt-4">
  <table class="table">
      <thead>
          <tr>
              <th scope="col">Quantity</th>
              <th scope="col">Source currency</th>
              <th scope="col">Target currency</th>
              <th scope="col">Amount converted</th>
              <th scope="col">Creation date</th>
          </tr>
      </thead>
      <tbody>
      {% for conversion in conversions %}
        <tr>
          <td>{{conversion.quantity}}</td>
          <td>{{conversion.sourceCurrency}}</td>
          <td>{{conversion.targetCurrency}}</td>
          <td>{{conversion.amountConverted}}</td>
          <td>{{conversion.creationDate |date('Y-m-d') }}</td>
        </tr>
      {% endfor %}
      </tbody>
  </table>
</div>
{% else %}
  <h5 class="text-center mb-5">
  <br/>
      Sorry, there are no conversions available for display.
  </h5>
{% endif %}
{% endblock %}